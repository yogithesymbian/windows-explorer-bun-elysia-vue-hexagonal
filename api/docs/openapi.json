                },
                {
                  "description": "offset default 0",
                  "type": "integer"
                }
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List node dalam subtree",
            "content": {
              "application/json": {
                "schema": {
                  "description": "List node dalam subtree",
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "parentId": {
                        "nullable": true,
                        "anyOf": [
                          {
                            "type": "string"
                          },
