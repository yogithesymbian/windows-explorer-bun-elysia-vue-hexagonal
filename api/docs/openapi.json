{
  "openapi": "3.0.3",
  "servers": [
    {
      "url": "/api/v1"
    }
  ],
  "info": {
    "title": "Explorer API",
    "description": "File & Folder explorer service with ltree + FTS",
    "version": "1.0.0",
    "contact": {
      "name": "Yogi Arif Widodo",
      "email": "yogi@example.com"
    }
  },
  "tags": [
    {
      "name": "Folders",
      "description": "Hierarki & navigasi folder"
    },
    {
      "name": "Files",
      "description": "Listing & pencarian files"
    },
    {
      "name": "Search",
      "description": "Global search"
    }
  ],
  "paths": {
    "/api/v1/tree": {
      "get": {
        "summary": "Ambi tree",
        "tags": [
          "Folders"
        ],
        "description": "Get subtree of folders",
        "parameters": [
          {
            "name": "rootPath",
            "in": "query",
            "required": false,
            "schema": {
              "description": "ltree path, contoh root",
              "default": "root",
              "type": "string"
            }
          },
          {
            "name": "maxDepth",
            "in": "query",
            "required": false,
            "schema": {
              "description": "kedalaman tree relatif terhadap maxDepth",
              "default": 2,
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List node dalam tree",
            "content": {
              "application/json": {
                "schema": {
                  "description": "List node dalam tree",
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "parentId": {
                        "nullable": true,
                        "anyOf": [
                          {
                            "type": "string"
                          },
                          {
                            "type": "null"
                          }
                        ]
                      },
                      "path": {
                        "type": "string"
                      },
                      "depth": {
                        "type": "number"
                      }
                    },
                    "required": [
                      "id",
                      "name",
                      "parentId",
                      "path",
                      "depth"
                    ]
                  }
                }
              }
            }
          }
        },
        "operationId": "getApiV1Tree"
      }
    },
